{
    "exclude": ["./node_modules"],
    "include": ["*.ts"],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2019"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES2019",
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"]
        },
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false
    }
}
